{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": true,
    "types": ["@types/node"],
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}